	x:Class="SteelHair.Cliente1"
	x:Name="Window"
	Title="Gestão de Clientes"
	Width="488" Height="405"
	ResizeMode="NoResize">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="{DynamicResource fundocliente1}" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	<Grid x:Name="LayoutRoot">
		<ListBox Name="list1" HorizontalAlignment="Left" Height="327" Margin="28,21,0,0" VerticalAlignment="Top" Width="259"/>
		<Button Content="Adicionar Cliente" Margin="321,21,36,299" Click="Button_Click"/>
		<Button Content="Remover Cliente" Margin="321,80,36,240" Click="Button_Click_1"/>
        <Button Content="Ver Cliente" Margin="321,141,36,179" Click="Button_Click_2"/>
    </Grid>
</Window>