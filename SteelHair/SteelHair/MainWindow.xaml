<Window x:Class="SteelHair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
		ResizeMode="NoResize">
	<Window.Resources>
		<Color x:Key="fundocliente">#FF194889</Color>
	</Window.Resources>
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FF000621" Offset="0"/>
			<GradientStop Color="#FF2D7DDC" Offset="1"/>
			<GradientStop Color="#FF194889" Offset="0.634"/>
		</LinearGradientBrush>
	</Window.Background>
    <Grid>
    	<Button Content="Aniversários" HorizontalAlignment="Left" Height="77" Margin="59,119,0,0" VerticalAlignment="Top" Width="122"/>
    	<Button Content="Registos" HorizontalAlignment="Left" Height="77" Margin="195,28,0,0" VerticalAlignment="Top" Width="122"/>
    	<Button Content="Descontos" HorizontalAlignment="Left" Height="77" Margin="195,119,0,0" VerticalAlignment="Top" Width="122"/>
    	<Button Content="Stock" HorizontalAlignment="Left" Height="77" Margin="331,28,0,0" VerticalAlignment="Top" Width="122"/>
    	<Button Content="Sobre" HorizontalAlignment="Left" Height="77" Margin="331,119,0,0" VerticalAlignment="Top" Width="122" RenderTransformOrigin="0.992,1.091"/>
    	<Button Content="Cliente" HorizontalAlignment="Left" Height="77" Margin="59,28,0,0" VerticalAlignment="Top" Width="122" Click="Button_Click"/>
    </Grid>
</Window>
